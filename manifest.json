{

    "manifest_version": 2,
    "name": "Link to QR Code",
    "version": "1.0",

    "description": "Generates a QR Code for the website you're on",

    "icons": {
        "48": "icon-48.png"
    },

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["toQR.js"]
    }],

    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "permissions": ["contextMenus", "activeTab"]

}